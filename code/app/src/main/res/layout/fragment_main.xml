            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0.5dip"
        android:layout_height="match_parent"
        android:layout_below="@id/ra_banner"
        android:layout_centerHorizontal="true"
        android:background="@color/color_e3e3e3"></RelativeLayout>

</RelativeLayout>