                    android:id="@+id/tv_task_1"
                    style="@style/tv_32px_03a9f4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/ra_task_1_anchor"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="-3dip"
                    android:layout_marginLeft="10dip"
                    android:singleLine="true"
                    android:text="@string/str_task_1" />

                <RelativeLayout
                    android:id="@+id/ra_task_1_anchor"
                    android:layout_width="0dip"
                    android:layout_height="0dip"
                    android:layout_centerVertical="true"></RelativeLayout>

                <TextView
                    android:id="@+id/tv_task_1_scores"
                    style="@style/tv_20px_555555"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
